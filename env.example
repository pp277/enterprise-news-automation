# Environment Variables - Copy to .env and fill in your values

# Superfeedr Credentials
SUPERFEEDR_USER=your_superfeedr_username
SUPERFEEDR_PASS=your_superfeedr_token

# AI API Keys (Groq) - System will try these in order
GROQ_API_KEY_1=your_primary_groq_key
GROQ_API_KEY_2=your_secondary_groq_key
GROQ_API_KEY_3=your_tertiary_groq_key

# Facebook API Keys
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token

# Optional: Email notifications for critical errors
NOTIFICATION_EMAIL=your_email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password

# Optional: Database credentials (if using external DB)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=news_automation
DB_USER=username
DB_PASSWORD=password
